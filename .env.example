# ====================================
# eLife Backend 环境变量配置模板
# ====================================

# Node 环境
NODE_ENV=production
PORT=3000

# ====================================
# 数据库配置
# ====================================
DATABASE_URL="mysql://user:password@localhost:3306/elife"

# 数据库连接重试配置（可选）
DB_MAX_RETRIES=5
DB_RETRY_DELAY=5000

# ====================================
# 微信配置
# ====================================

# 小程序 APPID
WECHAT_APPID=wxxxxxxxxxxx

# 小程序 Secret（如果需要）
WECHAT_SECRET=xxxxxxxxxxxxxxxx

# 公众号 APPID（可选）
WECHAT_MP_APPID=

# 微信支付配置
WECHAT_MCH_ID=1900006511
WECHAT_ENV_ID=prod-xxxxx

# 微信支付回调配置（可选，有默认值）
WECHAT_PAYMENT_CALLBACK_SERVICE=elife-backend
WECHAT_PAYMENT_CALLBACK_PATH=/payment/callback
WECHAT_PAYMENT_SERVER_IP=127.0.0.1

# ====================================
# Unitel API 配置（蒙古运营商）
# ====================================

# Unitel API URL（必填）
UNITEL_API_URL=https://api.unitel.mn/api/v1

# Unitel 认证信息（必填）
UNITEL_USERNAME=your_username
UNITEL_PASSWORD=your_password

# Unitel API 超时配置（可选）
UNITEL_TIMEOUT=30000
UNITEL_TOKEN_CACHE_TIME=90

# ====================================
# 日志配置
# ====================================

# 日志级别: debug | info | warn | error
LOG_LEVEL=info

# 日志文件保留天数
LOG_MAX_FILES=30

# ====================================
# 腾讯云日志服务 CLS（可选）
# ====================================

CLS_ENABLED=true
CLS_SECRET_ID=AKIDxxxxxxxxxx
CLS_SECRET_KEY=xxxxxxxxxx
CLS_TOPIC_ID=xxxxxx-xxxx-xxxx
CLS_ENDPOINT=ap-shanghai.cls.tencentyun.com
CLS_RETRY_TIMES=10

# ====================================
# CORS 配置
# ====================================

CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ====================================
# 业务配置（可选）
# ====================================

# 充值重试配置
RECHARGE_RETRY_MAX_ATTEMPTS=3
RECHARGE_RETRY_DELAY_MS=5000

# 定时任务开关
TASK_RETRY_PENDING_ENABLED=true
TASK_CHECK_FAILED_ENABLED=true
TASK_CHECK_TRANSACTION_ENABLED=true
